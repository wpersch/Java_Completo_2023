import java.util.Scanner;

public class Ex02 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Type the circle radius:");
		int r = sc.nextInt();
		double area = Math.PI * r;
		
		
		System.out.printf("The circle area is: %.4f", area);
		
		sc.close();

	}

}
